    // Prepara la consulta SQL para insertar los datos en la base de datos
    $consulta = "INSERT INTO resultados (Agua, Alimentacion, Vestido, Vivienda, Transporte, Reciclaje, Compras) VALUES ('$Agua', '$Alimentacion', '$Vestido', '$Vivienda', '$Transporte', '$Reciclaje', '$Compras')";
